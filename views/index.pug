extends layout

block content

  body

    h1=title

    ul
    each message in messages
      li #{message.user}: #{message.text}

    form(action='/new' method='POST')
      div
        span name: 
        input(type='text' name="messageUser" value='')
      div
        span message: 
        input(type='text' name="messageText" value='')
      div
        input(type='submit' value='Submit')


